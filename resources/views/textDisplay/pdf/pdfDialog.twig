{% macro toggleButton(id, label, active) %}
<label class="btn btn-default" style="text-align: left;">
    <input type="checkbox" id="{{ id }}" {{ active ? 'checked' }}> {{ label }}
</label>
{% endmacro %}
{% import _self as macros %}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Bezár</span></button>
    <h4 class="modal-title" id="pdfModalLabel">PDF-készítés</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-8">
            <div id="previewContainer" data-ref="{{ refString }}" data-translation="{{ translationId }}" style="overflow:hidden">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width:40%">
                        <span class="label">Előnézet készítése...</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="btn-group-vertical" id="pdfToggles">
                    {{ macros.toggleButton('pdfHeadings', 'Címsorok', true) }}
                    {# {{ macros.toggleButton('pdfRefs', 'Hivatkozások', false) }} #}
                    {{ macros.toggleButton('pdfNums', 'Versszámozás', false) }}
                         <div class="form-control">Példányszám
                        <select id="pdfQuantity">
                            {% for i in 1..30 %}<option value="{{ i }}">{{ i }}</option>{% endfor %}
                        </select>
                             </div>
                    </p>
                </div>
            </div>
            <div class="row">
                <hr width="100px" />
                <p></p>
                <p><a href="javascript:void(0)" id="pdfDownload"><span class="glyphicon glyphicon-download"></span> Letöltés</a></p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Bezárás</button>
</div>
